		"contao/core":">=2.11,<4.0",
		"contao-community-alliance/event-dispatcher": "1.0.*@dev",
		"contao-community-alliance/translator": "1.0.*@dev"
	},
	"require-dev": {
		"metamodels/php-coding-standard": "*",
		"pdepend/pdepend": "1.1.*",
		"phpunit/phpunit": ">=3.7.10,<4-dev",
		"phpmd/phpmd": "1.5"
	},
	"conflict": {
		"contao/core": "3.0.*"
	},
	"autoload": {
		"classmap": [
			"system/modules/generalDriver/DC_General.php",
			"system/modules/generalDriver/DcGeneral/DC_General.php",
			"system/modules/generalDriver/deprecated"
		],
		"psr-0": {"DcGeneral": "system/modules/generalDriver"}
	},
	"replace": {
		"contao-legacy/dc_general": "*"
	},
	"extra":{
		"contao": {
			"symlinks": {
				"system/drivers/DC_General.php": "system/drivers/DC_General.php",
				"system/modules/generalDriver": "system/modules/generalDriver"
			}
		},
		"branch-alias": {
			"dev-master": "0.9.x-dev",
			"dev-contao3": "2.0.x-dev"
		}
	},
	"minimum-stability": "dev"
}
